<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_mainItemNuevoGrupoIntegrantes"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageviewListItemImageUsuario"
        android:layout_width="62dp"
        android:layout_height="57dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Image"
        android:src="@drawable/iconodeusuariossinfoto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtListItemNombreUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/nombreUsuario"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iconLayoutNuevoGrupoIntegrantes"
        app:layout_constraintStart_toEndOf="@+id/imageviewListItemImageUsuario"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/iconLayoutNuevoGrupoIntegrantes"
        android:layout_width="115dp"
        android:layout_height="42dp"
        android:layout_marginEnd="30dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageviewUsuariosBuscarSeguir"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@android:color/transparent"
            android:contentDescription="Icon 3"
            android:src="@drawable/botonseguir" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>